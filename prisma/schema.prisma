generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int            @id @default(autoincrement())
  username           String         @unique
  password           String
  name               String
  age                Int
  gender             Gender?
  bodyWeight         Float
  height             Float
  fitnessGoal        FitnessGoal
  activityLevel      ActivityLevel?
  targetWeight       Float?
  lastCalculatedTdee Float?
  lastGoalCalories   Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workoutPlans WorkoutPlan[]
  workouts     Workout[]
  foods        Food[]
  dailyLogs    DailyLog[]
}

model WorkoutPlan {
  id     Int    @id @default(autoincrement())
  userId Int
  title  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  exercisePlan ExercisePlan[]
  user         User           @relation(fields: [userId], references: [id])
}

model ExercisePlan {
  id            Int    @id @default(autoincrement())
  name          String
  totalSets     Int
  workoutPlanId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workoutPlan WorkoutPlan @relation(fields: [workoutPlanId], references: [id])
}

model Workout {
  id     Int    @id @default(autoincrement())
  userId Int
  title  String

  startTime DateTime
  endTime   DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  exercises Exercise[]
  user      User       @relation(fields: [userId], references: [id])
}

model Exercise {
  id        Int    @id @default(autoincrement())
  workoutId Int
  name      String
  order     Int
  sets      Set[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workout Workout? @relation(fields: [workoutId], references: [id])
}

model Set {
  id         Int   @id @default(autoincrement())
  exerciseId Int
  reps       Int
  weight     Float
  order      Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  exercise Exercise @relation(fields: [exerciseId], references: [id])
}

model Food {
  id        Int    @id @default(autoincrement())
  name      String
  calories  Float
  protein   Float  @default(0)
  fat       Float  @default(0)
  carbs     Float  @default(0)
  serving   String @default("1 serving")
  createdBy Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  creator   User?      @relation(fields: [createdBy], references: [id])
  mealFoods MealFood[]
}

model DailyLog {
  id                  Int       @id @default(autoincrement())
  userId              Int
  date                DateTime  @db.Date
  dailyNeedCalories   Float?
  manualCalorieTarget Float?
  goalCalorieTarget   Float?
  caloriesIn          Float     @default(0)
  caloriesOut         Float     @default(0)
  netCalories         Float     @default(0)
  currentWeight       Float?
  targetWeight        Float?
  lastRecalculatedAt  DateTime? @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id])
  meals Meal[]

  @@unique([userId, date])
}

model Meal {
  id         Int      @id @default(autoincrement())
  dailyLogId Int
  type       MealType

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  dailyLog  DailyLog   @relation(fields: [dailyLogId], references: [id])
  mealFoods MealFood[]
}

model MealFood {
  id               Int    @id @default(autoincrement())
  mealId           Int
  foodId           Int?
  portion          Float  @default(1)
  totalCal         Float  @default(0)
  caloriesSnapshot Float
  proteinSnapshot  Float  @default(0)
  fatSnapshot      Float  @default(0)
  carbsSnapshot    Float  @default(0)
  servingSnapshot  String @default("1 serving")
  foodNameSnapshot String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  meal Meal  @relation(fields: [mealId], references: [id])
  food Food? @relation(fields: [foodId], references: [id], onDelete: SetNull)
}

enum Gender {
  MALE
  FEMALE
}

enum ActivityLevel {
  NOT_VERY_ACTIVE
  LIGHTLY_ACTIVE
  ACTIVE
  VERY_ACTIVE
}

enum FitnessGoal {
  LOSE_WEIGHT
  GAIN_WEIGHT
  MAINTAIN_WEIGHT
}

enum MealType {
  BREAKFAST
  LUNCH
  DINNER
  SNACK
}
