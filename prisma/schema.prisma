generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  username      String         @unique
  password      String
  name          String
  age           Int
  gender        Gender?
  bodyWeight    Float
  height        Float
  fitnessGoal   FitnessGoal
  activityLevel ActivityLevel?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workoutPlans WorkoutPlan[]
  workouts     Workout[]
}

model WorkoutPlan {
  id     Int    @id @default(autoincrement())
  userId Int
  title  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  exercisePlan ExercisePlan[]
  user         User           @relation(fields: [userId], references: [id])
}

model ExercisePlan {
  id            Int    @id @default(autoincrement())
  name          String
  totalSets     Int
  workoutPlanId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workoutPlan WorkoutPlan @relation(fields: [workoutPlanId], references: [id])
}

model Workout {
  id     Int    @id @default(autoincrement())
  userId Int
  title  String

  startTime DateTime
  endTime   DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  exercises Exercise[]
  user      User       @relation(fields: [userId], references: [id])
}

model Exercise {
  id        Int    @id @default(autoincrement())
  workoutId Int
  name      String
  order     Int
  sets      Set[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workout Workout? @relation(fields: [workoutId], references: [id])
}

model Set {
  id         Int   @id @default(autoincrement())
  exerciseId Int
  reps       Int
  weight     Float
  order      Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  exercise Exercise @relation(fields: [exerciseId], references: [id])
}

enum Gender {
  MALE
  FEMALE
}

enum ActivityLevel {
  NOT_VERY_ACTIVE
  LIGHTLY_ACTIVE
  ACTIVE
  VERY_ACTIVE
}

enum FitnessGoal {
  LOSE_WEIGHT
  GAIN_WEIGHT
  MAINTAIN_WEIGHT
}
